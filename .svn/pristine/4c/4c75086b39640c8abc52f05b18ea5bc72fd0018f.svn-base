    _tableReport =[[UITableView alloc]initWithFrame:self.view.frame];
    _tableReport.backgroundColor = [UIColor clearColor];
    _tableReport.dataSource = self;
    _tableReport.separatorStyle = UITableViewCellSeparatorStyleNone;
